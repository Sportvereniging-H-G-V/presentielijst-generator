{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "vitest", "node"],
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["src", "vite.config.ts", "src/types"],
  "exclude": ["dist"]
}
